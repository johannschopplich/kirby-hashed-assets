{
  "name": "johannschopplich/kirby-hashed-assets",
  "description": "File name hashes support for css() and js() helpers",
  "type": "kirby-plugin",
  "version": "3.0.7",
  "keywords": [
    "assets",
    "components",
    "css",
    "helpers",
    "js",
    "kirby",
    "kirby-cms",
    "laravel-mix",
    "manifest"
  ],
  "license": "MIT",
  "homepage": "https://github.com/johannschopplich/kirby-hashed-assets#readme",
  "authors": [
    {
      "name": "Johann Schopplich",
      "email": "pkg@johannschopplich.com",
      "homepage": "https://johannschopplich.com"
    }
  ],
  "require": {
    "PHP": ">=8.0",
    "getkirby/composer-installer": "^1.2"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "@stable",
    "getkirby/cms": "^3.8",
    "phpunit/phpunit": "^9.0"
  },
  "scripts": {
    "test": "phpunit",
    "fix": "php-cs-fixer fix",
    "dist": "composer install --no-dev --optimize-autoloader"
  },
  "config": {
    "optimize-autoloader": true,
    "allow-plugins": {
      "getkirby/composer-installer": true
    }
  },
  "extra": {
    "kirby-cms-path": "tests/fixtures/kirby"
  }
}
