{
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf public/assets/{css,js}",
    "sass:main": "sass --style=compressed src/scss/main.scss public/assets/css/main.css",
    "sass:templates": "sass --style=compressed src/scss/templates:public/assets/css/templates",
    "js:main": "rollup --config",
    "assets:hash": "node scripts/hashBuildAssets.js",
    "dev": "concurrently \"npm run sass:main -- --embed-source-map --watch\" \"npm run sass:templates -- --embed-source-map --watch\" \"npm run js:main -- --watch\"",
    "build": "npm run clean && npm run sass:main -- --no-source-map && npm run sass:templates -- --no-source-map && npm run js:main && npm run assets:hash"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-replace": "^2.3.4",
    "concurrently": "^5.3.0",
    "core-js": "^3.8.1",
    "dotenv": "^8.2.0",
    "fast-glob": "^3.2.4",
    "rimraf": "^3.0.2",
    "rollup": "^2.35.1",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.30.0"
  }
}
